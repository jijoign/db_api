pipeline {
    agent any
    
    parameters {
        string(name: 'BRANCH_NAME', defaultValue: 'main', description: 'Branch to build from')
        choice(name: 'BUILD_TYPE', choices: ['mysql', 'sqlite', 'postgresql', 'all'], description: 'Type of build to create')
        booleanParam(name: 'RUN_TESTS', defaultValue: true, description: 'Run test suite')
        booleanParam(name: 'CREATE_PACKAGE', defaultValue: false, description: 'Create distribution package')
    }
    
    environment {
        PYTHON_VERSION = '3.11'
        PROJECT_NAME = 'rest-api-library'
        VENV_DIR = 'venv'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo "Checking out source code from branch: ${params.BRANCH_NAME}..."
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: "*/${params.BRANCH_NAME}"]],
                    userRemoteConfigs: scm.userRemoteConfigs
                ])
            }
        }
        
        stage('Setup Python Environment') {
            steps {
                echo "Setting up Python ${PYTHON_VERSION} environment..."
                sh '''
                    python3 -m venv ${VENV_DIR}
                    . ${VENV_DIR}/bin/activate
                    pip install --upgrade pip
                    pip install -r requirements.txt
                '''
            }
        }
        
        stage('Code Quality Checks') {
            parallel {
                stage('Linting') {
                    steps {
                        echo 'Running linting checks...'
                        sh '''
                            . ${VENV_DIR}/bin/activate
                            mkdir -p build/logs
                            python ci/scripts/lint_check.py 2>&1 | tee build/logs/lint-check.log
                        '''
                    }
                }
                
                stage('Type Checking') {
                    steps {
                        echo 'Running type checks...'
                        sh '''
                            . ${VENV_DIR}/bin/activate
                            mkdir -p build/logs
                            python ci/scripts/type_check.py 2>&1 | tee build/logs/type-check.log
                        '''
                    }
                }
            }
        }
        
        stage('Build Executable') {
            steps {
                script {
                    def packageFlag = params.CREATE_PACKAGE ? '--package' : ''
                    echo "Building executable: ${params.BUILD_TYPE}..."
                    if (params.CREATE_PACKAGE) {
                        echo "Creating distribution package..."
                    }
                    sh """
                        . ${VENV_DIR}/bin/activate
                        mkdir -p build/logs
                        python ci/scripts/build_executable.py --type ${params.BUILD_TYPE} ${packageFlag} 2>&1 | tee build/logs/build-executable.log
                    """
                }
            }
        }

        stage('Verify Build') {
            steps {
                echo 'Verifying build artifacts...'
                sh '''
                    . ${VENV_DIR}/bin/activate
                    mkdir -p build/logs
                    python ci/scripts/verify_build.py 2>&1 | tee build/logs/verify-build.log
                '''
            }
        }

        stage('Unit Tests') {
            when {
                expression { params.RUN_TESTS == true }
            }
            steps {
                echo 'Running unit tests...'
                sh '''
                    . ${VENV_DIR}/bin/activate
                    mkdir -p test-results
                    python -m pytest ci/tests/ -v \
                        --cov=app \
                        --cov-report=xml \
                        --cov-report=html \
                        --junitxml=test-results/pytest-results.xml
                '''
            }
            post {
                always {
                    junit 'test-results/*.xml'
                    publishHTML(target: [
                        reportDir: 'htmlcov',
                        reportFiles: 'index.html',
                        reportName: 'Coverage Report'
                    ])
                }
            }
        }
                
        stage('Test Executable') {
            steps {
                echo 'Testing executable...'
                sh '''
                    . ${VENV_DIR}/bin/activate
                    mkdir -p build/logs
                    python ci/tests/test_executable.py 2>&1 | tee build/logs/test-executable.log
                '''
            }
        }
        
        stage('Integration Tests') {
            steps {
                echo 'Running integration tests...'
                sh '''
                    . ${VENV_DIR}/bin/activate
                    mkdir -p build/logs
                    python ci/tests/test_installer.py 2>&1 | tee build/logs/integration-tests.log
                '''
            }
        }
        
        stage('Archive Artifacts') {
            steps {
                echo 'Archiving build artifacts...'
                script {
                    // Archive executables and packages
                    archiveArtifacts artifacts: 'dist/**/*', fingerprint: true, allowEmptyArchive: true
                    
                    // Archive test results
                    archiveArtifacts artifacts: 'test-results/*.xml', fingerprint: true, allowEmptyArchive: true
                    archiveArtifacts artifacts: 'coverage.xml', fingerprint: true, allowEmptyArchive: true
                    
                    // Archive coverage reports
                    archiveArtifacts artifacts: 'htmlcov/**/*', fingerprint: true, allowEmptyArchive: true
                    
                    // Archive build logs
                    archiveArtifacts artifacts: 'build/logs/**/*.log', fingerprint: true, allowEmptyArchive: true
                    archiveArtifacts artifacts: 'build/**/*.toc', fingerprint: true, allowEmptyArchive: true
                    
                    // Archive PyInstaller spec files
                    archiveArtifacts artifacts: '*.spec', fingerprint: true, allowEmptyArchive: true
                    
                    echo 'All artifacts archived successfully'
                }
            }
        }
    }
    
    post {
        always {
            echo 'Cleaning up...'
            cleanWs()
        }
        success {
            echo 'Build completed successfully!'
            emailext(
                subject: "Build Success: ${env.JOB_NAME} - ${env.BUILD_NUMBER}",
                body: "Build ${env.BUILD_NUMBER} completed successfully.\n\nBuild URL: ${env.BUILD_URL}",
                to: "${env.CHANGE_AUTHOR_EMAIL}"
            )
        }
        failure {
            echo 'Build failed!'
            emailext(
                subject: "Build Failed: ${env.JOB_NAME} - ${env.BUILD_NUMBER}",
                body: "Build ${env.BUILD_NUMBER} failed.\n\nBuild URL: ${env.BUILD_URL}",
                to: "${env.CHANGE_AUTHOR_EMAIL}"
            )
        }
    }
}
