pipeline {
    agent any
    
    parameters {
        string(name: 'BRANCH_NAME', defaultValue: 'main', description: 'Branch to build from')
        choice(name: 'BUILD_TYPE', choices: ['all', 'sqlite', 'postgresql', 'mysql'], description: 'Type of build to create')
        choice(name: 'BUILD_MODE', choices: ['onefile', 'onedir'], description: 'Build mode')
        booleanParam(name: 'RUN_TESTS', defaultValue: true, description: 'Run test suite')
        booleanParam(name: 'CREATE_PACKAGE', defaultValue: false, description: 'Create distribution package')
    }
    
    environment {
        PYTHON_VERSION = '3.11'
        PROJECT_NAME = 'rest-api-library'
        VENV_DIR = 'venv'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo "Checking out source code from branch: ${params.BRANCH_NAME}..."
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: "*/${params.BRANCH_NAME}"]],
                    userRemoteConfigs: scm.userRemoteConfigs
                ])
            }
        }
        
        stage('Setup Python Environment') {
            steps {
                echo "Setting up Python ${PYTHON_VERSION} environment..."
                script {
                    if (isUnix()) {
                        sh '''
                            python3 -m venv ${VENV_DIR}
                            . ${VENV_DIR}/bin/activate
                            pip install --upgrade pip
                            pip install -r requirements.txt
                            pip install -r requirements-dev.txt
                        '''
                    } else {
                        bat '''
                            python -m venv %VENV_DIR%
                            call %VENV_DIR%\\Scripts\\activate.bat
                            pip install --upgrade pip
                            pip install -r requirements.txt
                            pip install -r requirements-dev.txt
                        '''
                    }
                }
            }
        }
        
        stage('Code Quality Checks') {
            parallel {
                stage('Linting') {
                    steps {
                        echo 'Running linting checks...'
                        script {
                            if (isUnix()) {
                                sh '''
                                    . ${VENV_DIR}/bin/activate
                                    python ci/scripts/lint_check.py
                                '''
                            } else {
                                bat '''
                                    call %VENV_DIR%\\Scripts\\activate.bat
                                    python ci\\scripts\\lint_check.py
                                '''
                            }
                        }
                    }
                }
                
                stage('Type Checking') {
                    steps {
                        echo 'Running type checks...'
                        script {
                            if (isUnix()) {
                                sh '''
                                    . ${VENV_DIR}/bin/activate
                                    python ci/scripts/type_check.py
                                '''
                            } else {
                                bat '''
                                    call %VENV_DIR%\\Scripts\\activate.bat
                                    python ci\\scripts\\type_check.py
                                '''
                            }
                        }
                    }
                }
            }
        }
        
        stage('Unit Tests') {
            when {
                expression { params.RUN_TESTS == true }
            }
            steps {
                echo 'Running unit tests...'
                script {
                    if (isUnix()) {
                        sh '''
                            . ${VENV_DIR}/bin/activate
                            python -m pytest tests/ -v --cov=app --cov-report=xml --cov-report=html
                        '''
                    } else {
                        bat '''
                            call %VENV_DIR%\\Scripts\\activate.bat
                            python -m pytest tests\\ -v --cov=app --cov-report=xml --cov-report=html
                        '''
                    }
                }
            }
            post {
                always {
                    junit '**/test-results/*.xml'
                    publishHTML(target: [
                        reportDir: 'htmlcov',
                        reportFiles: 'index.html',
                        reportName: 'Coverage Report'
                    ])
                }
            }
        }
        
        stage('Build Executable') {
            steps {
                echo "Building executable: ${params.BUILD_TYPE} (${params.BUILD_MODE})..."
                script {
                    if (isUnix()) {
                        sh """
                            . ${VENV_DIR}/bin/activate
                            python ci/scripts/build_executable.py --type ${params.BUILD_TYPE} --mode ${params.BUILD_MODE}
                        """
                    } else {
                        bat """
                            call %VENV_DIR%\\Scripts\\activate.bat
                            python ci\\scripts\\build_executable.py --type ${params.BUILD_TYPE} --mode ${params.BUILD_MODE}
                        """
                    }
                }
            }
        }
        
        stage('Verify Build') {
            steps {
                echo 'Verifying build artifacts...'
                script {
                    if (isUnix()) {
                        sh '''
                            . ${VENV_DIR}/bin/activate
                            python ci/scripts/verify_build.py
                        '''
                    } else {
                        bat '''
                            call %VENV_DIR%\\Scripts\\activate.bat
                            python ci\\scripts\\verify_build.py
                        '''
                    }
                }
            }
        }
        
        stage('Test Executable') {
            steps {
                echo 'Testing executable...'
                script {
                    if (isUnix()) {
                        sh '''
                            . ${VENV_DIR}/bin/activate
                            python ci/tests/test_executable.py
                        '''
                    } else {
                        bat '''
                            call %VENV_DIR%\\Scripts\\activate.bat
                            python ci\\tests\\test_executable.py
                        '''
                    }
                }
            }
        }
        
        stage('Integration Tests') {
            steps {
                echo 'Running integration tests...'
                script {
                    if (isUnix()) {
                        sh '''
                            . ${VENV_DIR}/bin/activate
                            python ci/tests/test_installer.py
                        '''
                    } else {
                        bat '''
                            call %VENV_DIR%\\Scripts\\activate.bat
                            python ci\\tests\\test_installer.py
                        '''
                    }
                }
            }
        }
        
        stage('Create Package') {
            when {
                expression { params.CREATE_PACKAGE == true }
            }
            steps {
                echo 'Creating distribution package...'
                script {
                    if (isUnix()) {
                        sh '''
                            . ${VENV_DIR}/bin/activate
                            python build.py --package
                        '''
                    } else {
                        bat '''
                            call %VENV_DIR%\\Scripts\\activate.bat
                            python build.py --package
                        '''
                    }
                }
            }
        }
        
        stage('Archive Artifacts') {
            steps {
                echo 'Archiving build artifacts...'
                archiveArtifacts artifacts: 'dist/**/*', fingerprint: true
            }
        }
    }
    
    post {
        always {
            echo 'Cleaning up...'
            cleanWs()
        }
        success {
            echo 'Build completed successfully!'
            emailext(
                subject: "Build Success: ${env.JOB_NAME} - ${env.BUILD_NUMBER}",
                body: "Build ${env.BUILD_NUMBER} completed successfully.\n\nBuild URL: ${env.BUILD_URL}",
                to: "${env.CHANGE_AUTHOR_EMAIL}"
            )
        }
        failure {
            echo 'Build failed!'
            emailext(
                subject: "Build Failed: ${env.JOB_NAME} - ${env.BUILD_NUMBER}",
                body: "Build ${env.BUILD_NUMBER} failed.\n\nBuild URL: ${env.BUILD_URL}",
                to: "${env.CHANGE_AUTHOR_EMAIL}"
            )
        }
    }
}
